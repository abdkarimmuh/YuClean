<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andara.heatcliff.yuclean">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Splash">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login.LoginActivity"
            android:theme="@style/AppTheme.Splash" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".RegistrasiActivity"
            android:label="Registrasi"
            android:parentActivityName=".Login.LoginActivity"
            android:theme="@style/AppTheme.Splash" />
        <activity
            android:name=".RegistrasiActivityCount"
            android:theme="@style/AppTheme.Splash" />
        <activity
            android:name=".RegistrasiWebViewActivity"
            android:label="Registrasi"
            android:parentActivityName=".Login.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Menu.DetailBankActivity"
            android:label="Detail Bank Sampah"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Menu.TarikDanaActivity"
            android:label="Tarik Dana"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".DetailKegiatanActivity"
            android:label="Detail Kegiatan"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>